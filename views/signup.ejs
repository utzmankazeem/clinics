<% title= "Signup" %>
<%- include("layout/header") %>
    <section>
        <main>
            <form action="/signup" method="post">
                <p>
                    <% if(typeof errors != 'undefined') { %>
                        <% errors.map((error)=>{ %>
                            <p style="color: red"> <%- error.msg %> </p>
                        <% }) %>
                    <% } %>
        
                    <% if(message != 'undefined') { %>
                        <p style="color: green"> <%- message %> </p>
                    <% } %>
                        
                    <% if(error_msg != 'undefined'){ %>
                        <p style="color: red"> <%- error_msg %> </p>
                    <% } %>
                </p>
                    <p>Firstname: <input type="text" name="firstname"
                        value="<%= typeof firstname != 'undefined' ? firstname : '' %>"></p>
                    <p>Lastname: <input type="text" name="lastname"
                        value="<%= typeof lastname != 'undefined' ? lastname : '' %>"></p>
                    <p>Gender: Male <input type="radio" name="gender" value="M"
                        <% if(typeof gender != 'undefined' && gender === 'M'){ %> checked="checked" <%}%>
                        >
                              Female <input type="radio" name="gender" value="F"
                        <% if(typeof gender != 'undefined' && gender === 'F'){ %> checked="checked" <%}%>
                        >
                    </p>
                    
                    <p>Phone number: <input type="text" name="phoneNumber"
                        value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>">
                    </p>

                    <p>Qualification: B.Sc <input type="radio" name="qualification" value="B.Sc" 
                        <% if(typeof qualification != 'undefined' && qualification === 'B.Sc'){ %> checked="checked" <%}%>
                        >             M.Sc <input type="radio" name="qualification" value="M.Sc"
                        <% if(typeof qualification != 'undefined' && qualification === 'M.Sc'){ %> checked="checked" <%}%>
                        >             Ph.D <input type="radio" name="qualification" value="P.hd"
                        <% if(typeof qualification != 'undefined' && qualification === 'P.hd'){ %> checked="checked" <%}%>
                        >                  
                    </p>            
                <% let speciality = ["General Medicine", "General Surgeon", "Neuro Surgeon",
                                    "physiotherapist", "Gynecologist", "Dentist", "Optamologist"] %>

                <p>SpecializationðŸ©º: <select name="specialization">
                            <option value="">Select qualification</option>
                                <%speciality.map((special) =>{ %>
                            <option value="<%-special%>""<% if(typeof specialization != 'undefined' ){%>" selected="selected" <%}%>> 
                                        <%-special%></option>
                                <%})%>
                </select></p>

                <p>Hospital Name: <input type="text" name="hospitalName"
                    value="<%= typeof hospitalName != 'undefined' ? hospitalName : '' %>"hospitalName></p>
                <p>Email: <input type="text" name="email"
                    value="<%= typeof email != 'undefined' ? email : '' %>"></p>
                <p>Preferred Username: <input type="text" name="username"
                    value="<%= typeof username != 'undefined' ? username : '' %>"></p>
                <p>Password: <input type="text" name="pass1"
                    value="<%= typeof pass1 != 'undefined' ? pass1 : '' %>"></p>
                <p>Confirm Password: <input type="text" name="pass2"
                    value="<%= typeof pass2 != 'undefined' ? pass2 : '' %>"></p>

                <button type="submit"> submit</button>
                <button type="reset"> reset</button>
            </form>
        </main>
    </section>   
<%- include("layout/footer") %>