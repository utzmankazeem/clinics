<% title = "View Patient" %>
<%- include("layout/D-header")%>
    <section>
        <main>
        <table border="1">
            <tr>
                <th>Name</th>
                <th>Sex</th>
                <th>Mobile</th>
                <th>Status</th>
                <th>B.Group</th>
                <th>Genotype</th>
                <th colspan="2">Diagnosis </th>
                <th colspan="2">Edit Patient</th>
            </tr>
            <tr>
                <% patients.map((patient)=> { %>
                <td> <%-patient.firstname +" - "+ patient.lastname%> </td>
                <td> <%-patient.sex%> </td>
                <td> <%-patient.phone%> </td>
                <td> <%-patient.status%> </td>
                <td> <%-patient.bloodGroup%> </td>
                <td> <%-patient.genotype%> </td>
                <td> <a type="button" href="/addDiagnosis/<%-patient._id%>">➕</a></td>
                <td> <a type="button" href="/viewDiagnosis/<%-patient._id%>">📖</a></td>
                <td> <a type="button" href="/edit/<%-patient._id%>">📝</a> </td>
                <td> <a type="button" href="/delete/<%-patient._id%>">🗑️</a></td>
            </tr>
            <% }) %> 
        </table>
        </main>
    </section>
 
<%- include("layout/footer")%>